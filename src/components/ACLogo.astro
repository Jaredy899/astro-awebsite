---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="-50 0 700 419"
	class={className}
	width="100"
	height="100"
>
	<g>
		<path
			class="letter a"
			aria-label="A"
			d="M185 0L80 416.797H125L145 340H280L300 416.797H345L240 0H185ZM165 295L212.5 95L260 295H165Z"
		/>
		<path
			class="letter c"
			aria-label="C"
			d="M300 82.7372C300 37.0217 337.027 0 382.75 0H525V45H382.75C361.988 45 345.006 61.9759 345.006 82.7372V334.06C345.006 354.821 361.988 371.797 382.75 371.797H525V416.797H382.75C337.027 416.797 300 379.775 300 334.06V82.7372Z"
		/>
	</g>
</svg>

<style>
	svg {
		width: 100%;
		height: 100%;
		fill: currentColor;
	}
	.letter {
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		transform-origin: center;
	}
	.a {
		transform: translateX(-15px);
	}
	.c {
		transform: translateX(15px);
	}
	svg:hover .a {
		transform: translateX(-40px) scale(1.3);
	}
	svg:hover .c {
		transform: translateX(40px) scale(1.3);
	}
</style> 